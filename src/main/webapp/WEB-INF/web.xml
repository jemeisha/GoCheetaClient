<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>com.jemeisha.endpoints.Register</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.jemeisha.endpoints.Login</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>adminLogin</servlet-name>
    <servlet-class>com.jemeisha.endpoints.LoginAdmin</servlet-class>
<!--    <jsp-file>/admin/adminLogin.jsp</jsp-file>-->
  </servlet>

  <servlet>
    <servlet-name>adminLogout</servlet-name>
    <servlet-class>com.jemeisha.endpoints.AdminLogout</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>adminDrivers</servlet-name>
    <jsp-file>/admin/drivers.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>adminLogin</servlet-name>
    <url-pattern>/admin/login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>adminLogout</servlet-name>
    <url-pattern>/admin/logout</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>adminDrivers</servlet-name>
    <url-pattern>/admin/drivers</url-pattern>
  </servlet-mapping>
</web-app>
